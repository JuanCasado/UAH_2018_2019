// PARTE ENCARGADA DE ESPERAR LAS ORDENES QUE LE DEN BEGIN
void ejecutar(int mensage)
{
    switch(mensage)
    {
        case 1:
            bajarBrazo();
            break;
        case 2:
            subirBrazo();
            break;
        case 3:
            cerrarPinza();
            break;
        case 4:
            abrirPinza();
            break;
        default:
            break;
    }
}
unsigned long millis()
{
 return CurrentTick() - FirstTick()
}
task rutina()
{
    bajarBrazo();
    NumOut(1, LCD_LINE2, anguloBrazo);
    Wait(10000);
    subirBrazo();
    NumOut(1, LCD_LINE2, anguloBrazo);
    bool first = true;
    bool second = true;
    bool tri = true;
    bool cua = true;
     while(true)
     {
     ClearScreen();
     NumOut(1, LCD_LINE1, millis());
     if ((millis()> 28660) && first){
      first = false;
      bajarBrazo();
      Wait(2000);
      cerrarPinza();
     }
     if ((millis()>34380) && second)
     {
        second= false;
        abrirPinza();
     }
     if ((millis()>50920) && tri)
     {
        tri= false;
        cerrarPinza();
        Wait(2000);
        subirBrazo();
     }
     if ((millis()>71350) && cua)
     {
        cua= false;
        bajarBrazo();
        Wait(2000);
        abrirPinza();
        Wait(2000);
        cerrarPinza();
        Wait(2000);
        subirBrazo();
     }
     }

}


